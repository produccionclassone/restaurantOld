<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">${hibernate.dialect}</property>
        <property name="hibernate.show_sql">${hibernate.show_sql}</property>
        <property name="hibernate.format_sql">${hibernate.format_sql}</property>
        <property name="hibernate.use_sql_comments">${hibernate.use_sql_comments}</property>

        <mapping class="es.classone.restaurant.model.userprofile.UserProfile" />
        <mapping class="es.classone.restaurant.model.favorite.Favorite" />
        <mapping class="es.classone.restaurant.model.configurationGeneric.ConfigurationGeneric" />
        <mapping class="es.classone.restaurant.model.configurationBool.ConfigurationBool" />
        <mapping class="es.classone.restaurant.model.configurationRoom.ConfigurationRoom" />
        <mapping class="es.classone.restaurant.model.configurationPrivilege.ConfigurationPrivilege" />
        <mapping class="es.classone.restaurant.model.dishGroup.DishGroup" />
        <mapping class="es.classone.restaurant.model.dish.Dish" />
    </session-factory>
</hibernate-configuration>