<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	t:type="LayoutIndex" t:pageTitle="title">

	<head>
		<link rel="stylesheet" type="text/css"
			href="${context:/css/dataTables.bootstrap.css}" />
		<link rel="stylesheet" type="text/css"
			href="${context:/css/dataTables.colVis.css}" />
		<link rel="stylesheet" type="text/css"
			href="${context:/css/dataTables.colReorder.css}" />
		<link rel="stylesheet" type="text/css"
			href="${context:/css/dataTables.tableTools.css}" />
		<link rel="stylesheet" type="text/css"
			href="${context:/css/editor.bootstrap.css}" />
			<link rel="stylesheet" type="text/css"
			href="${context:/css/dataTables.fixedHeader.css}" />
		<script type="text/javascript" language="javascript"
			src="//cdn.datatables.net/1.10-dev/js/jquery.dataTables.js"></script>
		<script type="text/javascript" language="javascript"
			src="${context:javaScript/dataTables.bootstrap.js}"></script>
		<script type="text/javascript" language="javascript"
			src="${context:javaScript/dataTables.colVis.min.js}"></script>
		<script type="text/javascript" language="javascript"
			src="${context:javaScript/dataTables.colReorder.min.js}"></script>
			<script type="text/javascript" language="javascript"
			src="${context:javaScript/dataTables.fixedHeader.js}"></script>
		<script type="text/javascript" language="javascript"
			src="${context:javaScript/dataTables.tableTools.min.js}"></script>
		<script type="text/javascript" language="javascript"
			src="${context:javaScript/table.js}"></script>


	</head>
	<body>
		<div class="container">
			
			<div class="row">
				
				<div class="col-md-11">

					
					<table cellpadding="0" cellspacing="0" border="0"
						class="table table-bordered hover display" id="example">
						<thead class="table-head">
							<tr>
								<th>${message:dish-group-code}</th>
								<th>${message:dish-group-description}</th>
								<th>${message:iva-type}</th>
								<th>${message:salesLedgerAccount}</th>
								<th>${message:typeIncome}</th>
								<th>${message:macroGroup}</th>
							</tr>
						</thead>
						<tbody>
							<div t:type="Loop" t:source="dishgroups" t:value="dishGroup">
								<tr id="${dishGroup.dishGroupId}">
									<td>${dishGroup.dishGroupCode}</td>
									<td>${dishGroup.dishGroupDescription}</td>
									<td>${dishGroup.ivaType}</td>
									<td>${dishGroup.salesLedgerAccount}</td>
									<td>${dishGroup.typeIncome}</td>
									<td>${dishGroup.macroGroup}</td>
								</tr>

							</div>

						</tbody>

					</table>
					<button id="addRowButton" class="btn btn-default" data-toggle="tooltip"
											data-placement="bottom" title="${message:add}">
						<img src='${context:css/images/add.png}' width='20' height='20'  />
					</button>
					<button id="editRowButton" class="btn btn-default" data-toggle="tooltip"
											data-placement="bottom" title="${message:edit}">
						<img src='${context:css/images/edit.png}' width='20' height='20' />
					</button>

					<button id="deleteRowButton" class="btn btn-default" data-toggle="tooltip"
											data-placement="bottom" title="${message:delete}">
						<img src='${context:css/images/delete.png}' width='20' height='20' />
					</button>
				</div>
				<div class="modal fade" id="modalCreate">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal"
									aria-hidden="true">&times;
								</button>
								<h4 class="modal-title">${message:add-dish-group}</h4>
							</div>
							<div class="modal-body">
								<form role="form" class="form-horizontal" t:id="addRowForm"
									data-toggle="validator">
									<div class="form-group">
										<label for="dishGroupCode" class="col-sm-4 control-label">${message:dish-group-code}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="dishGroupCode"
												t:type="TextField" validate="required" />
										</div>
									</div>
									<div class="form-group">
										<label for="dishGroupDesc" class="col-sm-4 control-label">${message:dish-group-description}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="dishGroupDesc"
												t:type="TextField" validate="required" />
										</div>
									</div>

									<div class="form-group">
										<label for="ivaType" class="col-sm-4 control-label">${message:iva-type}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="ivaType" t:type="select" model="'1,2,3'" validate="required" />
										</div>
									</div>

									<div class="form-group">
										<label for="salesLedgerAccount" class="col-sm-4 control-label">${message:salesLedgerAccount}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="salesLedgerAccount"
												t:type="TextField" validate="required" />
										</div>
									</div>
									<div class="form-group">
										<label for="typeIncome" class="col-sm-4 control-label">${message:typeIncome}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="typeIncome" t:type="TextField"/>
										</div>
									</div>
									<div class="form-group">
										<label for="macroGroup" class="col-sm-4 control-label">${message:macroGroup}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="macroGroup" t:type="TextField"
												validate="required" />
										</div>
									</div>
									<div class="form-group modal-footer modal-footer-center">
										<input type="image" src="${context:css/images/add.png}"
											height="40" class="btn btn-default"></input>
									</div>
								</form>
							</div>
						</div><!-- /.modal-content -->
					</div><!-- /.modal-dialog -->
				</div><!-- /.modal -->
				<div class="modal fade" id="modalEdit">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal"
									aria-hidden="true">&times;
								</button>
								<h4 class="modal-title">${message:edit-dish-group}</h4>
							</div>
							<div class="modal-body">
								<form role="form" class="form-horizontal" t:id="editRowForm">
									<div class="form-group" hidden="true">

										<input class="form-control" t:id="dishGroupId" t:type="TextField"
											validate="required" />

									</div>
									<div class="form-group">
										<label for="dishGroupDesc" class="col-sm-4 control-label">${message:dish-group-description}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="editdishGroupDesc"
												t:type="TextField" validate="required" />
										</div>
									</div>

									<div class="form-group">
										<label for="ivaType" class="col-sm-4 control-label">${message:iva-type}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="editIvaType" t:type="TextField"
												validate="required" />
										</div>
									</div>

									<div class="form-group">
										<label for="salesLedgerAccount" class="col-sm-4 control-label">${message:salesLedgerAccount}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="editSalesLedgerAccount"
												t:type="TextField" validate="required" />
										</div>
									</div>
									<div class="form-group">
										<label for="typeIncome" class="col-sm-4 control-label">${message:typeIncome}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="editTypeIncome"
												t:type="TextField" />
										</div>
									</div>
									<div class="form-group">
										<label for="macroGroup" class="col-sm-4 control-label">${message:macroGroup}</label>
										<div class="col-sm-8">
											<input class="form-control" t:id="editMacroGroup"
												t:type="TextField" validate="required" />
										</div>
									</div>
									<div class="form-group modal-footer modal-footer-center">
										
										<input type="image" src="${context:css/images/edit.png}"
											height="40" class="btn btn-default"></input>
									</div>

								</form>
							</div>




						</div><!-- /.modal-content -->
					</div><!-- /.modal-dialog -->
				</div><!-- /.modal -->
				<div class="modal fade" id="modalDelete">
					<div class="modal-dialog">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal"
									aria-hidden="true">&times;
								</button>
								<h4 class="modal-title">${message:delete-dish-group}</h4>
							</div>
							<div class="modal-body">
								<p>${message:delete-message} ?</p>

							</div>
							<div class="modal-footer modal-footer-center">
							
								<a id="deleteRows" class="btn btn-default"
									href="/restaurant/masterfiles/masterdishgroup:deleterows/">
									<img src="${context:css/images/accept.png}"
											height="30" width="30"> </img>
									</a>
									<button type="button" class="btn btn-default" data-dismiss="modal"><img src="${context:css/images/delete.png}"
											height="30" width="30"> </img></button>
							
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</body>
	<script type="text/javascript">
			$(document).ready(function(){
			$(".btn").tooltip({
			'show': true,
			});
			});
		</script>
</html>